{% extends 'base.html.twig' %} 
 {% block body %}
    
 <h1>{{ category.name }}</h1>
 {% for program in programs %}
         <div>
            <h2>{{ loop.index }} / {{ program.title }} </h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% endblock %}